<!doctype html>
<html lang="en">
<head>
    <%- include('head') %>
</head>
<body>
    <%- include('menu') %>
    <section class="section main">
        <div class="container">
            <div class="row">
                <%- include('aside') %>
                <article class="col-xs-9">
                    <h1><%= danhMucHienTai.TenDanhMuc %></h1>
                    <div class="row">
                        <% sanphams.map(e=>{ %>
                            <div class="col-xs-4">
                                <div class="item">
                                    <img src="/imgs/default.jpg" class="thumbnail image"/>
                                    <h3 class="product-name"><%= e.TenSP %></h3>
                                    <p class="price"><%=  new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(e.Gia); %></p>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </article>
            </div>
        </div>
    </section>
</body>
</html>